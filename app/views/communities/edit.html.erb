<% content_for :title, "Edit #{@community.name}" %>
<div class="max-w-2xl mx-auto">
  <!-- Header Section -->
  <div class="mb-8">
    <nav class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400 mb-6">
      <%= link_to root_path, class: "hover:text-gray-700 dark:hover:text-gray-200 transition-colors" do %>
        <svg class="w-4 h-4 inline" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
        </svg>
        Home
      <% end %>
      <span>/</span>
      <%= link_to "Communities", communities_path, class: "hover:text-gray-700 dark:hover:text-gray-200 transition-colors" %>
      <span>/</span>
      <%= link_to @community.name, community_path(@community), class: "hover:text-gray-700 dark:hover:text-gray-200 transition-colors" %>
      <span>/</span>
      <span class="text-gray-900 dark:text-white font-medium">Edit</span>
    </nav>
    <div class="text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-amber-100 dark:bg-amber-900 rounded-full mb-4">
        <svg class="w-8 h-8 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Edit Community</h1>
      <p class="text-gray-600 dark:text-gray-400">
        Update the information for "<span class="font-medium"><%= @community.name %></span>"
      </p>
    </div>
  </div>
  <!-- Form Section -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 p-8">
    <%= render "form", community: @community %>
  </div>
  <!-- Action Links -->
  <div class="mt-6 flex items-center justify-center space-x-6">
    <%= link_to community_path(@community), class: "inline-flex items-center text-sm text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
      </svg>
      View Community
    <% end %>
    <%= link_to communities_path, class: "inline-flex items-center text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Communities
    <% end %>
  </div>
</div>
