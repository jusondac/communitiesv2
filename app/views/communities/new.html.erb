<% content_for :title, "Create New Community" %>
<div class="max-w-2xl mx-auto">
  <!-- Header Section -->
  <div class="mb-8">
    <nav class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400 mb-6">
      <%= link_to root_path, class: "hover:text-gray-700 dark:hover:text-gray-200 transition-colors" do %>
        <svg class="w-4 h-4 inline" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
        </svg>
        Home
      <% end %>
      <span>/</span>
      <%= link_to "Communities", communities_path, class: "hover:text-gray-700 dark:hover:text-gray-200 transition-colors" %>
      <span>/</span>
      <span class="text-gray-900 dark:text-white font-medium">New Community</span>
    </nav>
    <div class="text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full mb-4">
        <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Create New Community</h1>
      <p class="text-gray-600 dark:text-gray-400">
        Start building your community by providing some basic information about it.
      </p>
    </div>
  </div>
  <!-- Form Section -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 p-8">
    <%= render "form", community: @community %>
  </div>
  <!-- Action Links -->
  <div class="mt-6 text-center">
    <%= link_to communities_path, class: "inline-flex items-center text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Communities
    <% end %>
  </div>
</div>
