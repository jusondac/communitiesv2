<% content_for :title, @community.name %>
<div class="max-w-4xl mx-auto">
  <!-- Header Section -->
  <div class="mb-8">
    <nav class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400 mb-4">
      <%= link_to root_path, class: "hover:text-gray-700 dark:hover:text-gray-200 transition-colors" do %>
        <svg class="w-4 h-4 inline" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
        </svg>
        Home
      <% end %>
      <span>/</span>
      <%= link_to "Communities", communities_path, class: "hover:text-gray-700 dark:hover:text-gray-200 transition-colors" %>
      <span>/</span>
      <span class="text-gray-900 dark:text-white font-medium"><%= @community.name %></span>
    </nav>
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2"><%= @community.name %></h1>
        <div class="flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400">
          <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 rounded-full font-medium">
            <%= @community.public? ? 'Public Community' : 'Private Community' %>
          </span>
          <span>Created <%= @community.created_at.strftime("%B %d, %Y") %></span>
        </div>
      </div>
    </div>
  </div>
  <!-- Content Section -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700">
    <div class="p-8">
      <div class="mb-8">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">About this community</h2>
        <div class="prose prose-gray dark:prose-invert max-w-none">
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed text-base">
            <%= simple_format(@community.description) %>
          </p>
        </div>
      </div>
      <!-- Stats Section -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 py-6 border-t border-gray-100 dark:border-gray-700">
        <div class="text-center">
          <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">0</div>
          <div class="text-sm text-gray-500 dark:text-gray-400">Members</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-green-600 dark:text-green-400">0</div>
          <div class="text-sm text-gray-500 dark:text-gray-400">Posts</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-purple-600 dark:text-purple-400">
            <%= time_ago_in_words(@community.created_at) %>
          </div>
          <div class="text-sm text-gray-500 dark:text-gray-400">Age</div>
        </div>
      </div>
    </div>
    <!-- Action Bar -->
    <div class="px-8 py-4 bg-gray-50 dark:bg-gray-750 border-t border-gray-100 dark:border-gray-700 rounded-b-xl">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <%= link_to edit_community_path(@community), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Community
          <% end %>
          <%= link_to communities_path, class: "inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-600 dark:hover:bg-gray-500 text-gray-700 dark:text-gray-200 text-sm font-medium rounded-lg transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Communities
          <% end %>
        </div>
        <%= button_to community_path(@community), method: :delete, 
            class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors",
            data: { 
              turbo_confirm: "Are you sure you want to delete this community? This action cannot be undone.",
              turbo_method: :delete 
            } do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete Community
        <% end %>
      </div>
    </div>
  </div>
</div>
