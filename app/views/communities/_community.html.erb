<div id="<%= dom_id(community) %>" class="group bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6 hover:border-blue-300 dark:hover:border-blue-600 transition-all duration-200">
  <div class="space-y-3">
    <!-- Community Name & Status -->
    <div class="flex items-start justify-between">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
        <%= link_to community.name, community_path(community) %>
      </h3>
      <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded-full">
        <%= community.public? ? 'Public' : 'Private' %>
      </span>
    </div>
    <!-- Description -->
    <p class="text-gray-600 dark:text-gray-300 text-sm line-clamp-2">
      <%= truncate(community.description, length: 120) %>
    </p>
    <!-- Footer -->
    <div class="flex items-center justify-between pt-3 border-t border-gray-100 dark:border-gray-700">
      <span class="text-xs text-gray-500 dark:text-gray-400">
        <%= time_ago_in_words(community.created_at) %> ago
      </span>
      <div class="flex space-x-1 opacity-0 group-hover:opacity-100 transition-opacity">
        <%= link_to community_path(community), class: "p-1.5 text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        <% end %>
        <%= link_to edit_community_path(community), class: "p-1.5 text-gray-400 hover:text-amber-600 dark:hover:text-amber-400 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
